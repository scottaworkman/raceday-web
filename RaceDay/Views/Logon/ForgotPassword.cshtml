@using RaceDay.ViewModels;
@model ForgotPasswordViewModel
@{
    ViewBag.Title = "RaceDay Forgotten Password";
}

<div class="row">
    <div class="col-sm-4 col-sm-offset-4">

        <h4>Welcome to JYMF RaceDay</h4>
        <p>If you have forgotten your password or this is the first time you are accessing the updated application, please enter your email below.</p>

        @Html.PageMessageFor(m => m.PageMessage)

        @using (Html.BeginForm(MVC.Logon.ForgotPassword(), FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.RegisterEmail, new { @class = "control-label required" })
                @Html.TextBoxFor(m => m.RegisterEmail, new { @class = "form-control", placeholder = "user@xyz.com" })
            </div>
            <div class="form-group">
                <div class="g-recaptcha" data-sitekey="@Model.RecaptchaSiteKey" data-callback="reCaptchaCallback"></div>
            </div>
            <div style="text-align: center"><input type="submit" value="Send Password" class="btn btn-primary" disabled="disabled" /></div>
        }
    </div>
</div>
<div class="row" style="margin-top: 20px;">
    <div class="col-sm-4 col-sm-offset-4">
        <div style="width: 49%; display: inline-block;">
            @Html.ActionLink("Register an Account", MVC.Logon.Register())
        </div>
        <div style="text-align: right; width: 49%; display: inline-block;">
            @Html.ActionLink("Account Logon", MVC.Logon.Index())
        </div>
    </div>
</div>
@section Scripts
{
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
}
