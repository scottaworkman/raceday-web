@using RaceDay.ViewModels;
@model List<EventParticipant>
@{
    var count = 0;
}

@foreach (EventParticipant ep in Model)
{
    if (count % 3 == 0)
    {
        if (count > 0)
        {
            @Html.Raw("</div>")
        }
        @Html.Raw("<div class='row'>")
    }
    count++;

    <div class="col-sm-4">
        <a href="http://www.facebook.com/@ep.UserId" target="_blank">
            <img src="@ep.Image" alt="@ep.FullName" class="fbimage" />
            <div class="fbname">@ep.FullName</div>
        </a>
    </div>
}
</div>
